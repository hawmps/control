{
  "name": "jp-app-template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Professional React TypeScript template with enterprise-grade UI components",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx server.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --watch --verbose",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:export": "tsx scripts/db-export.js",
    "db:import": "tsx scripts/db-import.js",
    "db:wipe": "tsx scripts/db-wipe.js",
    "db:wipe:force": "tsx scripts/db-wipe.js --force",
    "db:wipe:complete": "tsx scripts/db-wipe.js --complete",
    "start": "npm run dev:full",
    "start:prod": "tsx server.js",
    "stop": "taskkill /F /IM node.exe 2>/dev/null || pkill -f \"concurrently|tsx|vite\" || true",
    "restart": "npm run stop && npm run start",
    "status": "node scripts/check-status.js",
    "clean": "npm run stop && rimraf node_modules/.vite *.log",
    "docker:build": "docker build -t security-tracker .",
    "docker:run": "docker run -d -p 3001:3001 -v \"$(pwd)/data:/app/data\" --name security-tracker-container security-tracker",
    "docker:start": "npm run docker:build && npm run docker:run",
    "docker:stop": "docker stop security-tracker-container jp-app-sec-security-tracker-1 2>/dev/null || true",
    "docker:remove": "docker rm security-tracker-container jp-app-sec-security-tracker-1 2>/dev/null || true",
    "docker:restart": "npm run docker:stop && npm run docker:remove && npm run docker:start",
    "docker:logs": "docker logs -f jp-app-sec-security-tracker-1 2>/dev/null || docker logs -f security-tracker-container 2>/dev/null || echo 'No container found. Run docker:compose:up or docker:start first.'",
    "docker:shell": "docker exec -it jp-app-sec-security-tracker-1 sh 2>/dev/null || docker exec -it security-tracker-container sh 2>/dev/null || echo 'No container found. Run docker:compose:up or docker:start first.'",
    "docker:compose:up": "docker-compose up --build -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:restart": "docker-compose restart",
    "docker:clean": "npm run docker:stop && npm run docker:remove && docker rmi security-tracker jp-app-sec-security-tracker 2>/dev/null || true && docker system prune -f"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.30.1",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "axe-playwright": "^2.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "keywords": [
    "react",
    "typescript",
    "vite",
    "tailwind",
    "template",
    "enterprise",
    "ui-components"
  ],
  "author": "JP Template",
  "license": "MIT"
}
